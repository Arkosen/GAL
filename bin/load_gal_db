#!/usr/bin/perl
use strict;
use warnings;
use Getopt::Long;
use GAL::Annotation;

#-----------------------------------------------------------------------------
#----------------------------------- MAIN ------------------------------------
#-----------------------------------------------------------------------------

my $usage = "

Synopsis:

load_gal_db --driver SQLite --parser gff3 --db_name db_name  file.gff3

Description:

Load a gal_database

Options:

  --driver    (mysql SQLite)
  --parser    A GAL::Parser subclass
  --user      Database user name
  --password  Database password
  --db_name   Database name

";


my ($help, $driver, $parser, $user, $password, $db_name);
my $opt_success = GetOptions('help'       => \$help,
			     'driver=s'   => \$driver,
			     'parser=s'   => \$parser,
			     'user=s'     => \$user,
			     'password=s' => \$password,
			     'db_name=s'  => \$db_name,
			      );

die $usage if $help || ! $opt_success;

my @files = @ARGV;
die $usage unless @files;
die $usage if grep {! -r $_} @files;
$driver ||= 'SQLite';
$parser ||= 'gff3';
if (! $db_name) {
    ($db_name = $files[0]) =~ s/\.(gvf|gff)3?/.sqlite/;
}

my $store_args = {class    => $driver,
		  database => $db_name,
		  user     => $user,
		  password => $password,
		 };

my $feat_store = GAL::Annotation->new(storage => $store_args);

$feat_store->parser(class => $parser);

$feat_store->load_files(files => \@files,
			mode  => 'overwrite',
		       );
